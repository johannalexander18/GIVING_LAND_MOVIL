<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:layout_margin="5dp"
    android:padding="8dp"
    >


    <!-- Contenedor de la imagen del producto y el botón de favorito -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colortres">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/producto1" />

        <!-- Botón de favorito -->

    </FrameLayout>

    <!-- Contenedor de texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/coloruno">

        <!-- Título del producto -->
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:text="Celular"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans"/>

        <!-- Descripción del producto -->
        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Se intercambia iphone por ..."
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:paddingBottom="4dp"
            android:fontFamily="@font/noto_sans"/>

        <!-- Texto adicional -->
        <TextView
            android:id="@+id/itemAdditional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intercambio"
            android:textColor="@color/colordos"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans"/>

        <!-- Ubicación -->
        <TextView
            android:id="@+id/itemLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popayán"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
